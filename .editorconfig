# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
#insert_final_newline = true

# git
[.git*]
indent_style = tab
indent_size = 4

# shell scripts
[**.{sh,bash}]
charset = utf-8
max_line_length = 110
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
shell_variant = bash

# batch
[*.{cmd,bat}]
end_of_line = crlf

# make and just
[{Makefile,justfile,.justfile,.justfile.user}]
indent_style = space
indent_size = 2

# xml
[*.{xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_style = space
indent_size = 2

# json
[*.{json,json5,webmanifest}]
indent_style = space
indent_size = 2

# yaml and toml
[*.{yml,yaml,toml}]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

# markdown
[**.{md,mdx,rst}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# Web Files
[*.{htm,html,js,jsm,ts,tsx,cjs,cts,ctsx,mjs,mts,mtsx,css,sass,scss,less,pcss,svg,vue}]
indent_style = space
indent_size = 2

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2

# Python with 4 space indentation
[*.py]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
max_line_length = 110
insert_final_newline = true
trim_trailing_whitespace = true
